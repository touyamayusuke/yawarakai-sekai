
<div data-controller="gentle-mode-all" class="mb-4 flex gap-2 items-center">
  <h1 class="text-xl font-bold"><%= @board.title %></h1>
  <button type="button" data-action="gentle-mode-all#showOriginal" class="px-2 py-1 text-xs bg-gray-200 rounded cursor-pointer hover:bg-gray-300">原文モード</button>
  <button type="button" data-action="gentle-mode-all#showGentle" class="px-2 py-1 text-xs bg-green-200 rounded cursor-pointer hover:bg-green-300">柔らかい世界モード</button>
</div>

<div class="space-y-2 mb-6" id="posts">
  <%= turbo_frame_tag "posts" do %>
    <%= render @posts %>
  <% end %>
</div>

<% if user_signed_in? %>
  <div class="p-4 bg-white border rounded">
    <h2 class="font-semibold mb-2">新規投稿</h2>
    <%= render "posts/form", board: @board, post: @post %>
  </div>
<% else %>
  <p class="text-sm text-gray-600">投稿するにはログインしてください。</p>
<% end %>