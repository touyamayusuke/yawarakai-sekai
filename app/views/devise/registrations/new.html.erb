<div class="max-w-md mx-auto mt-12 p-8 bg-white rounded shadow">
  <h2 class="text-2xl font-bold mb-6 text-center text-indigo-700">新規登録</h2>
  <%= form_with model: @user, url: registration_path(:user), class: "space-y-4" do |f| %>
    <div>
      <%= f.label :email, "メールアドレス", class: "block mb-1 text-sm font-medium" %>
      <%= f.email_field :email, autofocus: true, required: true, class: "w-full border rounded px-3 py-2" %>
    </div>
    <div>
      <%= f.label :password, "パスワード", class: "block mb-1 text-sm font-medium" %>
      <%= f.password_field :password, required: true, class: "w-full border rounded px-3 py-2" %>
    </div>
    <div>
      <%= f.label :password_confirmation, "パスワード（確認）", class: "block mb-1 text-sm font-medium" %>
      <%= f.password_field :password_confirmation, required: true, class: "w-full border rounded px-3 py-2" %>
    </div>
    <div>
      <%= f.submit "新規登録", class: "w-full py-2 bg-indigo-600 text-white rounded font-semibold" %>
    </div>
  <% end %>
  <div class="mt-4 text-center">
    <%= link_to "ログインはこちら", new_user_session_path, class: "text-indigo-600 underline" %>
  </div>
</div>
